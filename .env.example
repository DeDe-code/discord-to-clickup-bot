# Discord to ClickUp Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME="Discord ClickUp Bot Laravel"
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Authentication - CHANGE THIS!
API_SECRET="your_secure_api_secret_here"

# Discord Configuration - GET FROM DISCORD DEVELOPER PORTAL
DISCORD_BOT_TOKEN=your_discord_bot_token_here
WATCHED_CHANNEL_IDS=your_discord_channel_id_here

# ClickUp Configuration - GET FROM CLICKUP API SETTINGS
CLICKUP_CLIENT_ID=your_clickup_client_id_here
CLICKUP_CLIENT_SECRET=your_clickup_client_secret_here
CLICKUP_API_TOKEN=your_clickup_api_token_here
CLICKUP_WORKSPACE_ID=your_clickup_workspace_id_here
CLICKUP_CHANNEL_ID=your_clickup_channel_id_here

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/your/database.sqlite

# Other Laravel Settings
BCRYPT_ROUNDS=12
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail Configuration (optional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
