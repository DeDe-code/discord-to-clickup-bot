APP_NAME="Discord to ClickUp Bot"
APP_ENV=production
APP_KEY=base64:your-generated-app-key-here
APP_DEBUG=false
APP_URL=http://localhost:8001

LOG_CHANNEL=stack
LOG_LEVEL=info

# File-based storage only - NO DATABASE
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# API Authentication
API_SECRET="your-secure-api-secret-here"

# Discord Configuration
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# ClickUp Configuration
CLICKUP_API_TOKEN=your-clickup-api-token-here
CLICKUP_CLIENT_ID=your-clickup-client-id-here
CLICKUP_CLIENT_SECRET=your-clickup-client-secret-here
CLICKUP_WORKSPACE_ID=your-workspace-id-here
CLICKUP_REDIRECT_URI=http://localhost:8001/api/auth/clickup/callback

# Discord Channel Configuration
WATCHED_CHANNEL_IDS=your-discord-channel-ids-comma-separated
CLICKUP_CHANNEL_ID=your-clickup-channel-id-here
CLICKUP_TASK_ID=your-clickup-task-id-here